<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1B5B4"
    tools:context=".fragments.update.UpdateFragment">

    <Button
        android:id="@+id/btnUpdateTask"
        android:layout_width="163dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:background="#8E50BE"
        android:text="@string/button_update"
        app:layout_constraintEnd_toEndOf="@+id/updateSubjectEditText"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/updateSubjectEditText"
        app:layout_constraintTop_toBottomOf="@+id/updateSubjectEditText" />

    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="321dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="@string/enter_title"
        android:inputType="text"
        android:text="@string/empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateSubjectEditText"
        android:layout_width="322dp"
        android:layout_height="157dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="@string/enter_subject"
        android:inputType="text"
        android:text="@string/empty"
        app:layout_constraintEnd_toEndOf="@+id/updateTitleEditText"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/updateTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/updateTitleEditText" />

    <Spinner
        android:id="@+id/updateSpinner"
        android:layout_width="172dp"
        android:layout_height="55dp"
        android:entries="@array/spinner_items"
        app:layout_constraintBottom_toTopOf="@+id/updateTitleEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aclonica"
        android:paddingTop="20dp"
        android:text="@string/priority_text"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/updateSpinner"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>